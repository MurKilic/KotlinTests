<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Überschrift -->
    <TextView
        android:id="@+id/mainMenuTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hauptmenü"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- RadioGroup mit drei Optionen -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioAktiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktiviert Textblock unten" />

        <RadioButton
            android:id="@+id/radioDeaktiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deaktiviert" />

        <RadioButton
            android:id="@+id/radioNurLesen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nur lesbar anzeigen" />
    </RadioGroup>

    <!-- Textblock -->
    <EditText
        android:id="@+id/editTextBlock"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Textblock..."
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/editbox_background" />
</LinearLayout>
